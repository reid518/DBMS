<Window x:Class="DBMS.addUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="addUser" Height="170" Width="234">
    <Grid Margin="2,0,0,0" Height="155">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="add" Content="Add Owner" HorizontalAlignment="Left" Margin="76,89,0,0" VerticalAlignment="Top" Grid.Column="1" Height="20" Width="72" Grid.ColumnSpan="2" Click="Button_Click_1"/>
        <TextBox x:Name="oname" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="35,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <Label Content="Owner Name:" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" FontSize="10" Grid.Column="1"/>
        <Label Content="Add A New Owner" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="59,13,0,0" VerticalAlignment="Top" Width="117" FontWeight="Bold"/>

    </Grid>
</Window>
